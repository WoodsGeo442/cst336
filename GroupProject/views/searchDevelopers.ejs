<%- include ('partials/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1 align='center'> Search Game Developers </h1>
        <nav align='center'>
            <ul>
                <li> <a href = "/" id = "currentPage"> Home </a> </li>
                <li> <a href = "/createaccount"> Create Account</a> </li>
                <li> <a href = "/searchGames"> Search Games </a> </li>
                <li> <a href = "/searchDevelopers"> Search Game Developers </a> </li>
            </ul>
        </nav>
        <br><br>
        <form action='/login' method='GET'>
            <div class="text-center">
                <button class='btn btn-primary btn-block'> Login </button>
            </div>
        </form>
        <br><br>
        
        <div  align='center'>
            <img style='border: black' src='company_logos.png' width='500px' height ='300px' /> 
        </div>
        
        </br>
        </br>
        
        <form action='/developerSearch' method='GET'>
            <div class='form-group row'>
                <label for='company_name' class='col-sm-4 col-form-label' id="searchDevelopers_padding">Search Developers</label>
                <div class='col-sm-4'>
					<select id='company_name' name='company_name' style="width: 250px;">
						<%companies.forEach(function(company_name){%>
				            <option id='company_name' name='company_name' value='<%=company_name%>'><%=company_name%></option>
				        <%});%>
					</select>
					
				</div>
				<div>
                    <button class='btn btn-primary'> Search </button>
                </div>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include ('partials/footer'); -%>
