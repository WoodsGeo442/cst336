<%- include ('partials/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1 align='center'> Create Account </h1>
        <nav align='center'>
            <ul>
                <li> <a href = "/" id = "currentPage"> Home </a> </li>
                <li> <a href = "/createaccount"> Create Account</a> </li>
                <li> <a href = "/searchGames"> Search Games </a> </li>
                <li> <a href = "/searchdevelopers"> Search Game Developers </a> </li>
            </ul>
        </nav>
        <br><br>
        
        <script>
            function checkPasswords() {
                if ($("#password").val() == $("#password_check").val()) {
                    return true;   
                } else {
                    $("#password_check-lab").html("<b style='color: red;'>Passwords are not matching!</b>");
                    return false;
                }
                console.log("test");
            }
        </script>
            
        <form action="/createaccount" method='POST' onsubmit="return checkPasswords();" class="border">
            <div class="container2" align='center'>
                <div class='form-group row' align='center'>
                    <label for="username" class='col-sm-4 col-form-label'><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="uname" required>
                </div>
                <div class='form-group row' align='center'>
                    <label for="password" class='col-sm-4 col-form-label'><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" id="password" name="password" required>
             	</div>
             	<div class='form-group row' align='center'>
                    <label for="password_check" class='col-sm-4 col-form-label' id="password_check-lab"><b>Re-enter Password</b></label>
                    <input type="password" placeholder="Re-enter Password" id="password_check" name="password_check" required>
             	</div>
             	</br>
             	<div  class='col-sm-4'>
             	    <button type="submit" class='btn btn-primary btn-block'>Sign Up</button>
             	</div>
             	</br>
             	<div class='col-sm-4' >
                    <a href="/" class="btn btn-danger btn-block">Cancel</a>
                </div>
            </div>
    </div>
</div>

