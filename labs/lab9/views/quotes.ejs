<%- include ('templates/header'); -%>

<div class='container'>
    <div class='jumbotron'>
        <h1 style='text-align:center;'> FOUND AUTHOR </h1>
        <div class='row'>
            <div class='col-sm-4'></div>
            <button class='col-sm-4 btn btn-info btn-block' onclick='location.href="/";'>Search Again</button>
            <div class='col-sm-4'></div>
        </div>
    </div>
    
    <h3>Quotes from Author(s)</h3>
    <ul>
        <%quotes.forEach(function(q){%>
            <li><%=q.quote%> - <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal<%=q.authorId%>"><%=q.firstName%> <%=q.lastName%></button>
            
              <div class="modal" id="myModal<%=quotes.authorId%>">
                <div class="modal-dialog">
                  <div class="modal-content">
                      Modal Header 
                      <div class="modal-header">
                        <h4 class="modal-title"><%= q.firstName %> <%= q.lastName %></h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                      </div>
        
                      Modal body 
                      <div class="modal-body">
                        <div class='row'>
                        
                            <image class='col-sm-4 portait' src=<%=q.portrait%> />
                            <div class='col-sm-4 info'>
                              <h3><%=q.firstName%> <%=q.lastName%></h3>
                              <div>Born: <%=q.dob%></div>
                              <div>Dead: <%=q.dod%></div>
                              <div>Sex: <%=q.sex%></div>
                              <div>Profession: <%=q.profession%></div>
                              <div>Country: <%=q.country%></div>
                              <div class='bio'><%=q.biography%></div>
                              <a href='/author/<%=q.authorId%>'><h2>Quotes</h2></a>
                            </div>
                      
                      </div>
                    </div>
        
                     Modal footer 
                      <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                      </div>
                  </div>
                </div>
              </div>
            
        <%});%>
    </ul>
  </div>
</div>

<%- include ('templates/footer'); -%>